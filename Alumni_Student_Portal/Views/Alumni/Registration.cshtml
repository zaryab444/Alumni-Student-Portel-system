@model Alumni_Student_Portal.Models.tbl_Alumni

@{
    ViewBag.Title = "Registration";
}


<style>
   

    

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 10px;
        background-color: whitesmoke;
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<body style="background-image:url('../Content/images/abstract-art-artistic-background-1103970.jpg')">
    <div id="main-div">
        <div id="box" class="img-responsive">
            @using (Html.BeginForm("Registration",
                        "Alumni",
                        FormMethod.Post))
{
    <div class="insidebox" style="background-color:lightgray">
        <div> <h1>User SignUp</h1></div>




        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                @Html.TextBoxFor(x => x.Alumni_fullname, new { @class = "form-control", @placeholder = "fullname" })

            </div>
            <span style="color:red">   @Html.ValidationMessageFor(x => x.Alumni_fullname) </span>

        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                @Html.TextBoxFor(x => x.Alumni_email, new { @class = "form-control", @placeholder = "Email" })

            </div>
            <span style="color:red">   @Html.ValidationMessageFor(x => x.Alumni_email) </span>

        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                @Html.TextBoxFor(x => x.Alumni_Enrolmentnum, new { @class = "form-control", @placeholder = "Enrolment num" })

            </div>
            <span style="color:red">   @Html.ValidationMessageFor(x => x.Alumni_Enrolmentnum) </span>

        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                @Html.TextBoxFor(x => x.Alumni_cellnum, new { @class = "form-control", @placeholder = "Phone" })

            </div>
            <span style="color:red">   @Html.ValidationMessageFor(x => x.Alumni_cellnum) </span>

        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                @Html.TextBoxFor(x => x.Alumni_department, new { @class = "form-control", @placeholder = "Department" })

            </div>
            <span style="color:red">   @Html.ValidationMessageFor(x => x.Alumni_department) </span>

        </div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                @Html.TextBoxFor(x => x.Alumni_cmsid, new { @class = "form-control", @placeholder = "CMSID" })

            </div>
            <span style="color:red">   @Html.ValidationMessageFor(x => x.Alumni_cmsid) </span>

        </div>
        @*<div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>

                    <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />



                </div>


            </div>*@



        <div class="form-group">

            <input type="submit" value="Add" class="btn btn-success btn-block" />

        </div>

        <div class="form-group">
            <p style="color:red">@ViewBag.error</p>
        </div>



    </div>

}
        </div>

    </div>
</body>

