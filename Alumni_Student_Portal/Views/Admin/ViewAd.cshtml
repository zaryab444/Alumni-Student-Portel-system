@model Alumni_Student_Portal.Models.Adviewmodel






@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    td {
        padding: 20px;
    }
</style>


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />




<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>

<body style="background-color:lightgray">

    <section class="breadcrumb" style="padding-top:50px">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h4>Sessions</h4>


                <h6> Session Event</h6>




            </div>
        </div>

    </section>
    <div class="row">
        <div class="col-lg-12 col-md-12">

        </div>
    </div>

    <div class="row">

        <div class="col-lg-2 col-md-2">

        </div>



        <div class="col-lg-8 col-md-8">

            <div>
                <h1>@Model.Ad_name <small>AD-ID:@Model.Ad_id</small></h1>
            </div>

            <img src="@Url.Content(@Model.Ad_image)" style="width:800PX; height:450PX" />

            <div>
                <h1>Description: </h1>
                <p>@Model.Ad_des</p>
            </div>

            <table>


                <tr> <td>Category: </td> <td>@Model.cat_Name </td> </tr>
                @*<tr> <td>Posted by: </td> <td>@Model.u_name <img src="@Url.Content(@Model.cat_image)" style="width:40px; height:40px" /> </td>*@

                <tr>
                    <td colspan="2">
                        @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_Alumni))
                        {

                            @Html.ActionLink("Close this AD", "Home");
                          
                        }
                    </td>
                </tr>

            </table>
            




            <div class="col-lg-2 col-md-2">

            </div>


        </div>
</body>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}