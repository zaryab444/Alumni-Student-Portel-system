@using PagedList.Mvc
@model  PagedList.IPagedList<Alumni_Student_Portal.Models.tbl_Event_Category>


@{
    ViewBag.Title = "ViewCategory";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body style="background-color:lightgray">

    <section class="breadcrumb" style="padding-top:50px">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h4>View Categories</h4>







            </div>
        </div>
    </section>


    <div class="container" style="height:1150px; ">
        <div class="row">


        </div>



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(item.cat_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.cat_Name</h4>
                        <h4 style="color:#808080; font-family:'Comic Sans MS';text-align:center"> @Html.ActionLink(@item.cat_Name, "Ads", new { id = @item.cat_id })</h4>
                        <div style="margin-left:160px">
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.cat_id }, new { @class = "btn btn-danger btn-sm" })*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.cat_id })
                        </div>
                    </div>

                }
            }









        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ViewCategory", new { page }))
        </div>
    </div>

</body>
</html>

